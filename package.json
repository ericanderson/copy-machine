{
  "name": "copy-machine",
  "version": "0.2.2",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "Eric Anderson <e@ericlanderson.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run clean && tsc",
    "clean": "rm -rf lib",
    "lint": "tslint 'src/**.ts'",
    "precommit": "lint-staged",
    "prettier:check": "prettier --print-width 120 --trailing-comma es5 \"src/**/*.{ts,tsx}\" --list-different",
    "test": "jest",
    "watch:test": "jest --watch",
    "prepublish": "yarn run clean && yarn run build"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/__tests__/.*\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./build/jest/junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "devDependencies": {
    "@types/jest": "^20.0.7",
    "es6-shim": "^0.35.3",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-junit": "^2.1.0",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "prettier --print-width 120 --trailing-comma es5 --write",
      "git add"
    ],
    "*.md": [
      "markdownlint"
    ]
  }
}
